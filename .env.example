NODE_ENV=production
PORT=5000
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>/<dbName>?retryWrites=true&w=majority
JWT_SECRET=replace_with_a_long_random_secret
JWT_EXPIRY=7d
CORS_ORIGIN=https://your-frontend-domain.com
ALLOW_LOCALHOST_ORIGINS=false
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=replace_with_supabase_service_role_key
SUPABASE_AVATAR_BUCKET=uploads

# Optional Redis-backed hot state cache (recommended for production)
REDIS_URL=redis://localhost:6379
GAME_STATE_FLUSH_INTERVAL_MS=2000
GAME_STATE_CACHE_TTL_SECONDS=3600
GAME_MOVE_LOG_TTL_SECONDS=86400
GAME_MOVE_LOG_MAX_ITEMS=300
GAME_CACHE_DEBUG=false
GAME_PERF_DEBUG=false
SOCKET_DEBUG=false
ENGAGEMENT_DICE_ENABLED=false
ENGAGEMENT_DICE_DEBUG=false
ROOM_PLAYERS_CACHE_TTL_MS=15000
